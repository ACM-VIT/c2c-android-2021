<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.info_sponsers.InformationAndSpeakersFragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="64dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/backgroundColor"
        app:cardCornerRadius="12dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/primaryGreen" >

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/info_sponsor_tab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/backgroundColor"
            app:tabIndicatorGravity="stretch"
            app:tabIndicatorColor="@color/primaryGreen"
            app:tabIndicator="@drawable/primary_button_ripple_effect"
            app:tabMode="fixed"
            app:tabMinWidth="0dp"
            app:tabTextColor="@android:color/white"
            app:tabTextAppearance="@style/tabText"
            app:tabGravity="fill" />

    </com.google.android.material.card.MaterialCardView>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/info_sponsor_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>